    if (!WebSecurity.IsAuthenticated)
    {
        Response.StatusCode = 403;
        Response.End();
            
            
    }
    
    if (!Roles.IsUserInRole("Yonetici"))
    {
        Response.StatusCode = 403;
        Response.End();
       
    }

    var UserID=0;
    UserID=Convert.ToInt32(Request.Form["UserID"]);
    var db=Database.Open("u2p");
    db.Execute("UPDATE Profiles SET Onayli=1 WHERE UserID=@0",UserID);
    Response.Write("OK");
    Response.End();
    db.Close();
}
