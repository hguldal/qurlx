    var durum=UrlData[0];
    var mesaj="";
    if (durum=="YetkinizYok")
    {
        mesaj="Access Denied";
    }
    else if (durum=="ErisimeKapali")
    {
        mesaj="Access is closed";
    }
    else if (durum=="AdresGecersiz")
