@{
     if (!WebSecurity.IsAuthenticated)
   
        {
            Response.StatusCode=401;
            Response.End();
                   
        }  
        
    var db=Database.Open("u2p");  
    var kategoriID=Request["kategoriID"];
    IEnumerable<dynamic> queryURLs;
    
    if (kategoriID=="-1")
    {
        queryURLs =db.Query("SELECT * FROM Url INNER JOIN UrlKullanici ON Url.urlID=UrlKullanici.urlID WHERE userID=@0 ORDER BY Url.urlID ASC",WebSecurity.CurrentUserId);
    }
    else
    {
        queryURLs =db.Query("SELECT * FROM Url INNER JOIN UrlKategori ON Url.urlID=UrlKategori.urlID INNER JOIN Kategori ON UrlKategori.kategoriID=Kategori.kategoriID WHERE Kategori.kategoriID=@0",kategoriID);
    }

    Json.Write(queryURLs, Response.Output);
    db.Close();   
    Response.ContentType = "application/json";
    Response.End();
}


