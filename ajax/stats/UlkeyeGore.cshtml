@{
     if (!WebSecurity.IsAuthenticated)
   
        {
            Response.StatusCode=401;
            Response.End();
                   
        }  

     var db=Database.Open("u2p");
 
     var kisaKod=Request["kisaKod"];
    
     var baYil= int.Parse(Request["baYil"]);
     var baAy= int.Parse(Request["baAy"]);
     var baGun= int.Parse(Request["baGun"]);

     var biYil= int.Parse(Request["biYil"]);
     var biAy= int.Parse(Request["biAy"]);
     var biGun= int.Parse(Request["biGun"]);


     
    DateTime baslangicTarihi=new DateTime(baYil,baAy,baGun,0,0,0);
    DateTime bitisTarihi=new DateTime(biYil,biAy,biGun,23,59,59);


     var queryURL=db.QuerySingle("SELECT * FROM URL WHERE kisaKod=@0",kisaKod);

     if (db.QueryValue("SELECT COUNT(*) FROM UrlYonetici WHERE urlID=@0 AND userID=@1",queryURL.urlID,WebSecurity.CurrentUserId)<1)
     {
         db.Close();
         Response.StatusCode=401;
         Response.End();
     }


   var sorguIfadesi="SELECT country_name,count(*) as Visitor FROM Ziyaret WHERE CONVERT(NVARCHAR(10),tarih,121) >= CONVERT(NVARCHAR(10),'" + baslangicTarihi.ToString("yyyy-MM-dd") + "',121) AND CONVERT(NVARCHAR(10),tarih,121) <= CONVERT(NVARCHAR(10),'" + bitisTarihi.ToString("yyyy-MM-dd") + "',121) AND urlID=" + queryURL.urlID + " GROUP BY country_name";
     var querySonuc=db.Query(sorguIfadesi);
    
    
     
    Json.Write(querySonuc, Response.Output);
    db.Close();   
    Response.ContentType = "application/json";
    Response.End();
 
}

