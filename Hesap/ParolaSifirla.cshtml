@{
    Page.Title = "Parola Sıfırla";
    Layout = Href("~/Paylasilan/_LayoutMisafir.cshtml"); 
    var db=Database.Open("u2p");
    var sifirlamaKodu="";
    sifirlamaKodu=Request.QueryString["sifirlamaKodu"];
    
}
<div>
    <h2>Yeni Parola Oluştur</h2>
    <hr>
<form class="form-horizontal" id="frmParolaSifirla" action="@Href("~/ajax/Hesap/ParolaSifirla.cshtml")" method="post">
    
				<div class="form-group">
					 <input class="form-control" value="@sifirlamaKodu"  id="txtSifirlamaKodu" name="txtSifirlamaKodu" type="hidden" />
				</div>
				<div class="form-group">
					 <label for="txtParola" class="col-sm-3 control-label">Parola:</label><div class="col-sm-9"><input class="form-control" id="txtParola" name="txtParola" type="password" /></div>
				</div>

                <div class="form-group">
					 <label for="txtReParola" class="col-sm-3 control-label">Parola:(Tekrar)</label><div class="col-sm-9"><input class="form-control" id="txtReParola" name="txtReParola" type="password" /></div>
				</div>
                <div class="form-group">
                    <div class="col-sm-3"></div>
                    <div class="col-sm-9"><button type="submit" class="btn btn-primary" id="buttonParolaSifirla"><span class="glyphicon glyphicon-repeat"></span> Yeni Parola Oluştur</button> <a class="btn btn-default" id="lnkGirisSayfasinaGit" href="@Href("~/Hesap/Giris")">Giriş Yapmak İçin Buraya Tıkla</a></div>
                    </div>
				</form>
				
			
</div>

@{
    db.Close();
}

@section scripts
{
    <script src="@Href("~/scripts/jquery.form.js")"></script>
    <script src="@Href("~/scripts/jquery.validate.js")"></script>
    <script src="@Href("~/scripts/u2p/Hesap/ParolaSifirla.js")"></script>
}