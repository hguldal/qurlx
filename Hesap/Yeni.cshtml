@{
    Page.Title = "Create Account";
    Layout = Href("~/Paylasilan/_LayoutMisafir.cshtml"); 
    var db=Database.Open("u2p");
    
}

<div>
    <h2>Create Account</h2>
    <hr>
<form class="form-horizontal" id="frmYeniUye" action="@Href("~/api/Hesap/Yeni.cshtml")" method="post">
    
                 <div class="form-group">
					 <label for="txtGrupURL" class="col-sm-3 control-label">User Name:</label><div class="col-sm-9"><input class="form-control" id="txtGrupURL" name="txtGrupURL" type="text" /></div>
                    
				</div>

                <div class="form-group">
					 <label for="txtAd" class="col-sm-3 control-label">Name:</label><div class="col-sm-9"><input class="form-control" id="txtAd" name="txtAd" type="text" /></div>
                    
				</div>

                <div class="form-group">
					 <label for="txtSoyad" class="col-sm-3 control-label">Surname:</label><div class="col-sm-9"><input class="form-control" id="txtSoyad" name="txtSoyad" type="text" /></div>
				</div>
             
				<div class="form-group">
					 <label for="txtEmail" class="col-sm-3 control-label">E-mail:</label><div class="col-sm-9"><input class="form-control"  id="txtEmail" name="txtEmail" type="email" /></div>
				</div>
				<div class="form-group">
					 <label for="txtParola" class="col-sm-3 control-label">Password:</label><div class="col-sm-9"><input class="form-control" id="txtParola" name="txtParola" type="password" /></div>
				</div>

                <div class="form-group">
					 <label for="txtReParola" class="col-sm-3 control-label">Password:(Again)</label><div class="col-sm-9"><input class="form-control" id="txtReParola" name="txtReParola" type="password" /></div>
				</div>
                <div class="form-group">
                    <div class="col-sm-3"></div>
                    <div class="col-sm-9"><button type="submit" class="btn btn-primary" id="buttonKayitOl" >Create</button> <a href="javascript: history.go(-1)" class="btn btn-primary"> Back</a></div>
                    </div> 
				</form>
				
			
</div>
@{
    db.Close();
}

@section scripts
{
    <script src="@Href("~/scripts/jquery.form.js")"></script>
    <script src="@Href("~/scripts/jquery.validate.js")"></script>
    <script src="@Href("~/scripts/grouplat/Hesap/Yeni.js")"></script>
}