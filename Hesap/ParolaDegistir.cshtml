@{ 
    Layout = Href("~/Paylasilan/_Layout.cshtml"); 
     if (!WebSecurity.IsAuthenticated)
    {
        Response.Redirect("~/Hesap/Giris");
    }
   
}


<div>
    <h2>Parolayı Değiştir</h2>
    <hr>
<form class="form-horizontal" id="frmParolaDegistir" action="@Href("~/api/Hesap/ParolaDegistir.cshtml")" method="post">
   
				<div class="form-group">
					 <label for="txtParola" class="col-sm-3 control-label">Geçerli Parola:</label><div class="col-sm-3"><input class="form-control" id="txtParola" name="txtParola" type="password" /></div>
				</div>
        <div class="form-group">
					 <label for="txtReParola" class="col-sm-3 control-label">Yeni Parola:</label><div class="col-sm-3"><input class="form-control" id="txtYeniParola" name="txtYeniParola" type="password" /></div>
				</div>
                <div class="form-group">
					 <label for="txtReParola" class="col-sm-3 control-label">Yeni Parola (Tekrar):</label><div class="col-sm-3"><input class="form-control" id="txtReYeniParola" name="txtReYeniParola" type="password" /></div>
				</div>
                <div class="form-group">
                    <div class="col-sm-3"></div>
                    <div class="col-sm-9"><button type="submit" class="btn btn-primary" id="buttonParolaDegistir">Parolayı Değiştir</button></div>
                    </div> 
				</form>
				
			
</div>
@{
   
}

@section scripts
{
    <script src="@Href("~/scripts/jquery.form.js")"></script>
    <script src="@Href("~/scripts/jquery.validate.js")"></script>
    <script src="@Href("~/scripts/u2p/Hesap/ParolaDegistir.js")"></script>
}