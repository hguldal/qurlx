@{
    
if (!WebSecurity.IsAuthenticated)
{
Response.Redirect("~/Hesap/Giris");
}
Layout = "~/Paylasilan/_Layout.cshtml"; 

var db=Database.Open("u2p");

var queryKategoriler=db.Query("SELECT * FROM Kategori WHERE userID=@0",WebSecurity.CurrentUserId);
}


<div class="row">
    <div class="col-md-3 column">
      
         <div class="list-group" id="listeKategori">
            
            <a href="#" class="list-group-item kategoriOgesi active" data-kisaKod="hepsi" data-kategoriAdi="All URLs"><strong>All URLs</strong>
                    <span class="badge">@db.QueryValue("SELECT COUNT(*) FROM URL INNER JOIN URLKullanici ON URL.urlID=URLKullanici.urlID WHERE UserID=@0",WebSecurity.CurrentUserId)</span>
                    
             </a>
  
            @foreach (var item in queryKategoriler)
            {             
                 <a href="#" class="list-group-item kategoriOgesi" data-kisaKod="@item.kisaKod" data-kategoriAdi="@item.kategoriAdi"><strong>@item.kategoriAdi</strong>
                   <span class="badge" data-kisaKod="@item.kisaKod">@db.QueryValue("SELECT COUNT(*) FROM URLKategori WHERE kategoriID=@0",item.kategoriID)</span><br>@Request.Url.AbsoluteUri.Replace("#","")@item.kisaKod
                </a>
                
                    
            }
          
</div>
          
        </div>
    <div class="col-md-9 column">
         <h3 id="kategoriAdi">All URLs</h3><hr>
        
              <button class="btn btn-xs btn-link" data-toggle="modal" data-target="#modalURLEkle"> <span class="glyphicon glyphicon-plus-sign"></span> Add URL</button>
              

    <table class="table table-hover table-striped" id="lstUrl">
        <thead>
            <tr><td style="width:15px"></td><td style="width:200px"><strong>URL</strong></td><td><strong>Original URL</strong></td><td></td></tr>
            </thead>
        <tbody>
       
            </tbody>
    </table>
        </div>
</div>

<div class="modal" id="modalURLEkle" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Add New URL</h4>
      </div>
      <div class="modal-body"><label>Description</label>
          <input type="text" class="form-control" id="txtURLAciklama" placeholder="Enter Description....">
          <label>URL</label>
        <input type="url" class="form-control" id="txtURLEkle" placeholder="Paste URL Here...">
      </div>
      <div class="modal-footer">
         <button type="button" class="btn btn-primary" id="btnURLEkle">OK</button>
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
        
      </div>
    </div>
  </div>
</div>


<div class="modal" id="modalKategoriEkle" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Add New List</h4>
      </div>
      <div class="modal-body">
        <input type="text" class="form-control" id="txtKategoriEkle" placeholder="Enter List Name...">
      </div>
      <div class="modal-footer">
         <button type="button" class="btn btn-primary" id="btnKategoriEkle">OK</button>
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
        
      </div>
    </div>
  </div>
</div>

@section scripts
{
    
    <script src="@Href("~/scripts/u2p/Default.js")"></script>
        
}


@{
    db.Close();
}
