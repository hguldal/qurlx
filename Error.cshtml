    var durum=UrlData[0];
    var mesaj="";
    if (durum=="Access-Denied")
    {
        mesaj="Access Denied";
    }
    else if (durum=="Access-is-Closed")
    {
        mesaj="Access is closed";
    }
    else if (durum=="Invalid-Url")
    {
        mesaj="Invalid URL";
    }
    else if (durum=="Login")
    {
        mesaj="You must login to system";
    }
    else if(durum=="you-have-no-permission")
    {
        mesaj="You have no permission for this action";
    }

    }



<div class="alert alert-danger alert-dismissible" role="alert">
  <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
  <strong>Error! </strong>@mesaj
</div>